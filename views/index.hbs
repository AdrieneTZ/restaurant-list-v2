<!-- search bar -->
<div class='container search-bar d-flex'>
  <div class='search-bar-outer'>
    <div class='search-bar-inner'>
      <form action='/search' method='GET'>
        <h4 class='mb-2'>尋找餐廳：</h4>
        <div class='input-group'>
          <input
            type='text'
            name='keyword'
            value='{{keyword}}'
            class='form-control'
            placeholder='輸入餐廳、分類'
            aria-label='Restaurant Name...'
            value=''
            aria-describedby='search-button'
          />
          <div class='input-group-append'>
            <button class='btn btn-major' type='submit' id='search-button'><i
                class='fas fa-search'
              ></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>

  {{! dropdown }}
  <div class='dropdown'>
    <button
      class='btn btn-secondary dropdown-toggle'
      type='button'
      id='dropdownMenuButton2'
      data-bs-toggle='dropdown'
      aria-expanded='false'
      style='background-color: #304c89;'
    >
      Sorted by
    </button>
    <ul
      class='dropdown-menu dropdown-menu-dark'
      aria-labelledby='dropdownMenuButton2'
      style='background-color: #12295b;'
    >
      <li><a class='dropdown-item' href='/?sort=asc'>A to Z</a></li>
      <li><a class='dropdown-item' href='/?sort=desc'>Z to A</a></li>
      <li><a class='dropdown-item' href='/?rating=highest'>Highest Rating</a></li>
    </ul>
  </div>
</div>

<!-- restaurant list -->
<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-10 col-12 mx-auto'>
      <div class='row'>

        {{#each lists}}
          <div class='card col-4'>

            <div class='card mb-3'>
              <img
                class='card-img-top'
                src='{{this.image}}'
                alt='{{this.name}}'
              />
              <div class='card-body p-3'>
                <h6 class='card-title mb-1'>{{this.name}}</h6>

                <div class='restaurant-category mb-1'>
                  <i class='fas fa-utensils pr-2'></i>
                  {{this.category}}
                </div>

                <span
                  class='badge badge-pill badge-danger font-weight-normal'
                  style='color: black;'
                >
                  {{this.rating}}
                  <i class='fas fa-star fa-xs'></i>
                </span>

              </div>
            </div>
            <div class='buttons d-flex align-self-center align-items-baseline'>
              <a
                class='btn mx-1'
                style='background-color: #304c89; color: #eef8ed;'
                href='/restaurants/{{this._id}}'
              >More</a>
              <a
                class='btn mx-1'
                style='background-color: #12295b; color: #eef8ed;'
                href='./restaurants/{{this._id}}/edit'
              >Edit</a>
              <form
                action='./restaurants/{{this._id}}?_method=DELETE'
                method='POST'
                class='d-inline align-self-center'
              >
                <button
                  class='btn mx-1'
                  style='background-color: #710117; color: #eef8ed;'
                  type='submit'
                >Delete</button>
              </form>
            </div>

          </div>
        {{/each}}

      </div>
    </div>
  </div>
</div>