<div class='container'>
  <form action='/restaurants/{{list._id}}?_method=PUT' method='POST' class='needs-validation' novalidate>

    {{! name }}
    <div class='form-group mt-3'>
      <label for='name'>餐廳名稱( 必填 )</label>
      <input
        type='text'
        class='form-control'
        name='name'
        id='name'
        placeholder='請輸入餐廳的中文名稱'
        value='{{list.name}}'
        required
      />
      <div class='invalid-feedback'>
        Please provide a valid name.
      </div>
    </div>

    {{! name_en }}
    <div class='form-group mt-3'>
      <label for='name_en'>Restaurant Name ( required )</label>
      <input
        type='text'
        class='form-control'
        name='name_en'
        id='name_en'
        placeholder='Please text the restaurant name here'
        value='{{list.name_en}}'
        required
      />
      <div class='invalid-feedback'>
        Please provide a valid name.
      </div>
    </div>

    {{! category }}
    <div class='form-group mt-3'>
      <label for='category'>類型( 必填 ) Cuisine Type( required )</label>
      <input
        type='text'
        class='form-control'
        name='category'
        id='category'
        placeholder='請輸入餐點類型 What is the cuisine type of this restaurant?'
        value='{{list.category}}'
        list='categories'
        required
      />
      <div class='invalid-feedback'>
        Please provide a valid category.
      </div>

      <datalist id='categories'>
        <option>美式 American</option>
        <option>日本料理 Japanese</option>
        <option>義式餐廳 Italian</option>
        <option>韓式料理 Korean</option>
        <option>中東料理 Middle Eastern</option>
        <option>咖啡 Café</option>
        <option>酒吧 Bar</option>
      </datalist>
    </div>

    {{! image }}
    <div class='form-group mt-3'>
      <label for='image'>餐廳圖片( 非必填 ) Image Link( option )</label>
      <input
        type='text'
        class='form-control'
        name='image'
        id='image'
        placeholder='圖片連結 Please put the image link here'
        value='{{list.image}}'
      />
      <div class='invalid-feedback'>
        Spaces are not allowed.
      </div>
    </div>

    {{! phone }}
    <div class='form-group mt-3'>
      <label for='phone'>電話( 必填 ) Phone Number( required )</label>
      <input
        type='text'
        class='form-control'
        name='phone'
        id='phone'
        placeholder='請輸入電話號碼 Please text the restaurant phone number here'
        value='{{list.phone}}'
        required
      />
      <div class='invalid-feedback'>
        Please provide a valid phone number.
      </div>
    </div>

    {{! location }}
    <div class='form-group mt-3'>
      <label for='loaction'>地址( 必填 ) Address( required )</label>
      <input
        type='text'
        class='form-control'
        name='location'
        id='location'
        placeholder='請輸入餐廳地址 Please text the restaurant address here'
        value='{{list.location}}'
        required
      />
      <div class='invalid-feedback'>
        Please provide a valid location.
      </div>
    </div>

    {{! google_map }}
    <div class='form-group mt-3'>
      <label for='google_map'>連結( 非必填 ) Google Map Link( option )</label>
      <input
        type='text'
        class='form-control'
        name='google_map'
        id='google_map'
        placeholder='請貼上 Google Map 連結 Please put the Google Map link here'
        value='{{list.google_map}}'
      />
      <div class='invalid-feedback'>
        Spaces are not allowed.
      </div>
    </div>

    {{! rating }}
    <div class='form-group mt-3'>
      <label for='rating'>評分( 必填 ) Rate for the restaurant( required )</label>
      <input
        type='Number'
        class='form-control'
        name='rating'
        id='rating'
        placeholder='請為這間餐廳評分 How much do you like this restaurant?'
        min='0'
        max='5'
        step='0.1'
        value='{{list.rating}}'
        required
      />
      <div class='invalid-feedback'>
        Valid rating is from 0 to 5.
      </div>
    </div>

    {{! description }}
    <div class='form-group mt-3'>
      <label for='description'>請描述這間餐廳( 必填 ) Write some description for
        the restaurant( required )</label>
      <input
        type='text'
        class='form-control'
        id='description'
        name='description'
        placeholder='好吃!!!! Yummy'
        value='{{list.description}}'
        required
      />
      <div class='invalid-feedback'>
        Please provide a valid description.
      </div>
    </div>

    <button
      id='submit-btn'
      type='submit'
      class='btn btn-primary mt-3'
      style='background-color: #12295b; color: #eef8ed;'
    >Save</button>
  </form>
</div>

<script>
  const form = document.querySelector('.needs-validation')

  form.addEventListener('submit', event => {
    if (!form.checkValidity()) {
      event.preventDefault()
      event.stopPropagation()
    }
    form.classList.add('was-validated')
  }, false)
</script>